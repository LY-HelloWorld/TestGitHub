<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/game_cover_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/testball"/>

    <ImageView
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintDimensionRatio="H,10:6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/switch_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/external_switch" />

    <ImageView
        android:layout_width="218.67dp"
        android:layout_height="66.67dp"
        android:src="@drawable/external_play_btn" />

    <TextView
        android:layout_width="156.67dp"
        android:layout_height="31.33dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="PLAY"
        android:textColor="#FF9E5030"
        android:textSize="23.33sp" />

    <ImageView
        android:layout_width="141.67dp"
        android:layout_height="15.67dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="12dp"
        android:src="@drawable/external_logo" />

    <ImageView
        android:id="@+id/message_box_img"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:src="@drawable/external_dialog"
        app:layout_constraintDimensionRatio="H,8:5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/external_cancel_img"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:src="@drawable/external_cancel"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintLeft_toRightOf="@id/message_box_img"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>